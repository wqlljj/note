<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.example.wangqi.developutils.util.ScreenUtil" />

        <import type="android.content.Context" />

        <variable
            name="value"
            type="String" />

    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.wangqi.developutils.view.ScreenUtilActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusableInTouchMode="true"
            >

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@={value}" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="dp-px"
                android:inputType="numberDecimal"
                android:text="@={ScreenUtil.floatToString(ScreenUtil.scale)}" />
            android:inputType="numberDecimal"
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="px-sp"
                android:inputType="numberDecimal"
                android:text="@={ScreenUtil.floatToString(ScreenUtil.fontScale)}" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->ScreenUtil.dip2px(view.getContext(),Integer.valueOf(value))}"
            android:text="dip2px" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->ScreenUtil.sp2px(view.getContext(),Integer.valueOf(value))}"
            android:text="sp2px" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->ScreenUtil.px2dip(view.getContext(),Integer.valueOf(value))}"
            android:text="px2dip" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->ScreenUtil.px2sp(view.getContext(),Integer.valueOf(value))}"
            android:text="px2sp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView"/>

    </LinearLayout>
</layout>
