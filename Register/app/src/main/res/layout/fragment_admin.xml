<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="admin"
            type="com.cloudminds.register.repository.network.bean.Admin" />

        <variable
            name="loginCallback"
            type="com.cloudminds.register.callback.OnClickCallback" />
    </data>

    <LinearLayout
        android:id="@+id/container_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        tools:context="com.cloudminds.register.ui.fragment.admin.AdminFragment">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="24dp"
            android:text="@string/login_password_text"
            android:textSize="16sp" />

        <com.cloudminds.register.ui.view.CustomTextInputLayout
            android:id="@+id/admin_password"
            android:layout_width="520dp"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="6"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:singleLine="true" />

        </com.cloudminds.register.ui.view.CustomTextInputLayout>
    </LinearLayout>
</layout>
