<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/equipment_dialog_title"
        style="@style/PropDialog_Text"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/equipment_dialog_message"
        style="@style/PropDialog_Text"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/equipment_dialog_cancle"
            style="@style/PropDialog_Text_Click"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/equipment_dialog_ok"
            style="@style/PropDialog_Text_Click"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>