<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:orientation="vertical" >

<!-- android:background="@drawable/bg_chat_left"   android:textSize="@dimen/chat_tv_content_textSize"-->

    
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/chat_llt_magin_min"
        android:layout_marginRight="@dimen/chat_llt_magin_max"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/dialog_left" >

        <!-- "@drawable/bg_chat_right" -->
        <com.cloudminds.meta.customview.MyTextView2
            android:id="@+id/chat_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@null"
            android:textColor="@android:color/black"
            android:textSize="@dimen/chat_tv_content_textSize" />
        
        <TextView
            android:id="@+id/chat_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:paddingBottom="5dp"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/chat_tv_date_textSize" />
    </LinearLayout>

</LinearLayout>