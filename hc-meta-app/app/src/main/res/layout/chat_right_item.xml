<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/chat_llt_magin_min"
        android:layout_marginLeft="@dimen/chat_llt_magin_max"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/dialog_right" >

        <!-- "@drawable/bg_chat_right" -->

        <TextView
            android:id="@+id/chat_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@null"
            android:textColor="@android:color/white"
            android:textSize="@dimen/chat_tv_content_textSize" />
        
        <TextView
            android:id="@+id/chat_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="5dp"
            android:text="@null"
            android:textColor="@color/white"
            android:textSize="@dimen/chat_tv_date_textSize" />
    </LinearLayout>

</LinearLayout>