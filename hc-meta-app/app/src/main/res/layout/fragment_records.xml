<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cloudminds.meta.fragment.RecordsFragment">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_top_height"
        android:padding="10dp"
        android:background="@color/drawer_gray"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启识别"
            android:layout_centerVertical="true"
            android:id="@+id/recognition"
            android:visibility="gone"
            />
        <CheckBox
            android:id="@+id/btn_start_recognition"
            android:layout_toRightOf="@id/recognition"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:button="@null"
            android:clickable="false"
            android:visibility="gone"
            android:background="@drawable/btn_switch_selector"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动识别"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_start_recognition"
            android:id="@+id/auto_recognition"
            android:visibility="gone"
            />
        <CheckBox
            android:id="@+id/btn_auto_recognition"
            android:layout_toRightOf="@id/auto_recognition"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:button="@null"
            android:clickable="false"
            android:visibility="gone"
            android:background="@drawable/btn_switch_selector"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/clear_records"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/clear"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dialog_text_click"
            android:clickable="true"
            android:background="@drawable/bg_tv_click"
            />
    </RelativeLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="70dp"
       android:padding="10dp"
       android:id="@+id/linear"
       android:layout_alignParentBottom="true">
       <EditText
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:singleLine="true"
           android:id="@+id/msg"
           android:layout_weight="4"/>
       <ImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:src="@drawable/ic_message"
           android:clickable="true"
           android:id="@+id/send_msg"
           android:contentDescription="发送信息"
           />
   </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear"
        android:transcriptMode="alwaysScroll"
        android:cacheColorHint="#0000"
        android:divider="@null"
        android:dividerHeight="15dp"
        app:layoutManager="LinearLayoutManager"
        android:layout_below="@id/toolbar"
        android:scrollbars="none">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
