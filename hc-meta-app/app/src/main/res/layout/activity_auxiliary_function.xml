<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/drawer_gray"
    tools:context="com.cloudminds.meta.activity.AuxiliaryFunctionActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="@string/face_Recognition"
                android:gravity="center"
                android:padding="30dp"
                android:clickable="true"
                android:id="@+id/face_Recognition"
                android:background="@drawable/bg_tv_click_1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:text="@string/object_Recognition"
                android:gravity="center"
                android:padding="30dp"
                android:clickable="true"
                android:id="@+id/object_Recognition"
                android:background="@drawable/bg_tv_click_1"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:layout_height="match_parent"
                android:text="@string/money_Recognition"
                android:gravity="center"
                android:padding="30dp"
                android:clickable="true"
                android:id="@+id/money_Recognition"
                android:background="@drawable/bg_tv_click_1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="场景"
                android:gravity="center"
                android:padding="30dp"
                android:clickable="true"
                android:id="@+id/scene"
                android:visibility="gone"
                android:background="@drawable/bg_tv_click_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:text="@string/ocr"
                android:gravity="center"
                android:padding="30dp"
                android:clickable="true"
                android:id="@+id/ocr"
                android:background="@drawable/bg_tv_click_1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:text="@string/navigation"
                android:gravity="center"
                android:padding="30dp"
                android:clickable="true"
                android:id="@+id/navi"
                android:background="@drawable/bg_tv_click_1"
                />
        </LinearLayout>
    <TextView
        android:layout_width="150dp"
        android:textSize="20sp"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_gravity="center_horizontal"
        android:text="@string/hang_up"
        android:gravity="center"
        android:padding="15dp"
        android:clickable="true"
        android:id="@+id/hub_call_btn"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_tv_click_1"
        android:layout_margin="10dp"
        />
</LinearLayout>
