<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/family_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/personal_information_back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/bg_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_information_title"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/personal_information_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_information_edit"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/username"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/personal_information_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="AAA"
        android:hint="@string/family_item_add_name_hint"
        android:enabled="false"
        android:textColor="@color/tv_color_enable"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/personal_information_telephone"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/personal_information_tv_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="AAA"
        android:enabled="false"
        android:textColor="@color/tv_color_enable"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/personal_information_address"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/personal_information_tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="AAA"
        android:enabled="false"
        android:textColor="@color/tv_color_enable"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/personal_information_emergency_contact"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/personal_information_name"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/personal_information_tv_emergency_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="AAA"
        android:hint="@string/family_item_add_name_hint"
        android:enabled="false"
        android:textColor="@color/tv_color_enable"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/personal_information_telephone"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/personal_information_tv_emergency_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="AAA"
        android:enabled="false"
        android:textColor="@color/tv_color_enable"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/personal_information_address"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/personal_information_tv_emergency_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="AAA"
        android:enabled="false"
        android:textColor="@color/tv_color_enable"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:background="@drawable/bg_tv_click_1"
            android:visibility="gone"
            android:id="@+id/save"
            />
    </LinearLayout>
</ScrollView>